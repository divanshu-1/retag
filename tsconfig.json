{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./server/dist",
    "rootDir": "./server/src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "incremental": true,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": [
    "server/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "server/dist",
    "studio"
  ]
}
